= form_for @player do |f|
  -if @player.errors.any?
    #error_explanation
      %h2= "#{pluralize(@player.errors.count, "error")} prohibited this player from being saved:"
      %ul
        - @player.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :points
    = f.number_field :points
  .actions
    = f.submit 'Save'

:javascript
  $("#player_points").hide();
  $("label[for='player_points']").hide();

